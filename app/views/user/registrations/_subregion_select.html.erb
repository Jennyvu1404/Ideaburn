<div id="order_state_code_wrapper">
  <% parent_region ||= params[:parent_region] %>
  <% country = Carmen::Country.coded(parent_region) %>
  <% if country.nil? %>
    <%= text_field(:user, :region, disabled: '', placeholder: "Please select a country above") %>
  <% elsif country.subregions? %>
    <%= subregion_select(:user, :region, parent_region) %>
  <% else %>
    <%= text_field(:user, :region, placeholder: 'e.g California', required: true) %>
  <% end %>
</div>
